{# layouts/default.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Derafu: Certificate - Library for digital certificates{% endblock %}

{% block body %}
    {% block header %}
        {% include 'components/header.html.twig' %}
    {% endblock %}

    {% block main %}
        <div class="container">
            <div class="row">
                <main class="col-md-9">
                    {% block content %}{% endblock %}
                </main>
                <div class="col-md-2 py-4">
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                              <div class="fw-bold">Package Info</div>
                              <span class="smal text-muted">derafu/certificate</span>
                            </div>
                        </li>
                        <a href="/" class="list-group-item list-group-item-action {% if request.uri.path == '/' %}active{% endif %}">
                            README
                        </a>
                    </div>
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                            <div class="fw-bold">Docs</div>
                            <span class="smal text-muted">Guides & Examples</span>
                            </div>
                        </li>
                        <a href="/certificate-class" class="list-group-item list-group-item-action {% if request.uri.path == '/certificate-class' %}active{% endif %}">
                            Certificate Class
                        </a>
                        <a href="/self-signed-certificate" class="list-group-item list-group-item-action {% if request.uri.path == '/self-signed-certificate' %}active{% endif %}">
                            Self Signed Certificate
                        </a>
                        <a href="/asymmetric-key-helper" class="list-group-item list-group-item-action {% if request.uri.path == '/asymmetric-key-helper' %}active{% endif %}">
                            Asymmetric Key Helper
                        </a>
                        <a href="/certificate-service" class="list-group-item list-group-item-action {% if request.uri.path == '/certificate-service' %}active{% endif %}">
                            Certificate Service
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer %}
        {% include 'components/footer.html.twig' %}
    {% endblock %}
{% endblock %}
